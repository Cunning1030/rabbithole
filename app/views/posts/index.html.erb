<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="post-list container">

  <% @posts.each do |post| %>
    <div class="post-index-preview">
      <h3><%= link_to post.title, post %></h3>
      <p>"<%= post.excerpt %>"</p>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

</div>

<br>
